
  <div class="row">
    <div class="col-sm-6">
      <div class="card mb-4 " >
        <div class="card-body">
          <h3 class="card-title"> <%= @book.title %> </h3>
          <h4 class="card-subtitle mb-2 text-muted"><%= @book.author %> </h6>
          <p class="card-text"> <%= @book.description %> </p>
          <p class="card-text"> <strong>Price:</strong> <%= @book.price %> </p>
          <p class="card-text"> <strong>Seller:</strong> <%= @book.user.email %> </p>
          <%= link_to "Edit", edit_book_path(@book) , :class => "btn btn-primary" %>

          <%= link_to "All books", books_path, :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <h1> Write to seller of this book </h1>
      <%= render 'email_form' %>
      </div>
    </div>
  </div>
  <div class="row mx-4">
    <div class="col-sm-6">
      <h2>Add a review:</h2>
      <%= render 'reviews/form' %>
    </div>
    <h2>Reviews</h2>
  </div>
  <div class="row row-cols-4 mx-4">
   
    <div class="col">
      <%= render @book.reviews %>
    </div>
  </div>
 


