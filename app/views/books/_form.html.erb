<%= form_with model: @book do |form| %>
  <div class="field mb-3">
      <%= form.label :title , :class => "form-label" %><br>
      <%= form.text_field :title, :class => "form-control" %>
  
      <% @book.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
      <% end %>
  
    </div>
  
    <div class="field mb-3">
      <%= form.label :author , :class => "form-label" %><br>
      <%= form.text_field :author, :class => "form-control" %>
  
      <% @book.errors.full_messages_for(:author).each do |message| %>
          <div><%= message %></div>
      <% end %>
  
    </div>
  
    <div class="field mb-3">
      <%= form.label :description , :class => "form-label" %><br>
      <%= form.text_area :description, :class => "form-control" %>
  
      <% @book.errors.full_messages_for(:description).each do |message| %>
          <div><%= message %></div>
      <% end %>
  
    </div>
  
    <div class="field mb-3">
      <%= form.label :price , :class => "form-label" %><br>
      <%= form.number_field :price, {min: 0, max: 1000, class: "form-control" } %>
    </div>
  
    <div class="field mb-3">
      <%= form.submit :class => "btn btn-primary"  %>
    </div>
  <% end %>